                <script>

                    let all = $(".alltext").text()
                    let text = all
                    let texts = text.split("")
                    let myPromise = new Promise(function (resolve, reject) {

                        for (let i = 0; i < texts.length; i++) {
                            if (texts[i] == "..") {
                                texts[i] = ".."

                            } else
                                if (texts[i] == ".") {
                                    texts[i] = ".<br>"

                                }
                            if (texts[i] == `
    `) {
                                texts[i] = "<br>"

                            } else
                                if (texts[i] == "(" || texts[i] == "«") {
                                    texts[i] = "<div class='hadith'>("
                                } else
                                    if (texts[i] == ")" || texts[i] == "»") {
                                        texts[i] = ")</div>"
                                    } else
                                        if (texts[i] == "{") {
                                            texts[i] = "<div class='quran'>{"
                                        } else
                                            if (texts[i] == "}") {
                                                texts[i] = "}</div>"
                                            } else
                                                if (texts[i] == "ا" && texts[i + 1] == "ل" && texts[i + 2] == "ل" && texts[i + 3] == "ه" && texts[i + 4] == "م") {
                                                    texts[i] = "<div class='allh'>اللهم</div>"
                                                    texts[i + 1] = ""
                                                    texts[i + 2] = ""
                                                    texts[i + 3] = ""
                                                    texts[i + 4] = ""
                                                } else
                                                    if (texts[i] == "ا" && texts[i + 1] == "ل" && texts[i + 2] == "ل" && texts[i + 3] == "ه") {
                                                        texts[i] = "<div class='allh'>الله</div>"
                                                        texts[i + 1] = ""
                                                        texts[i + 2] = ""
                                                        texts[i + 3] = ""
                                                    }
                        }
                        resolve("ok");
                        reject("error");
                    });

                    myPromise.then(
                        function (value) {
                            let texts2 = texts.join("")
                            $(".alltext").html(texts2)
                        },
                        function (err) { console.log(err) }
                    );



                </script>
